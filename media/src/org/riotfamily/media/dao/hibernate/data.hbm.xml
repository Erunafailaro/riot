<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="org.riotfamily.media.model.data" auto-import="false">

	<class name="FileData" table="riot_media_data" discriminator-value="file" lazy="false">
		<cache usage="nonstrict-read-write" region="media" />
		<id name="id">
			<generator class="native" />
		</id>
		<discriminator column="`type`" type="string" />
		<set name="files" inverse="true" lazy="true">
			<cache usage="nonstrict-read-write" region="media" />
			<key column="fileData" />
			<one-to-many class="org.riotfamily.media.model.RiotFile" />
		</set>
		<map name="variants" lazy="true" cascade="all-delete-orphan">
			<cache usage="nonstrict-read-write" region="media" />
			<key column="variantOf" />
			<index column="variantName" type="string" />
			<one-to-many class="org.riotfamily.media.model.RiotFile" />
		</map>
		<property name="fileName" />
		<property name="contentType" />
		<property name="size" />
		<property name="creationDate" />
		<property name="owner" />
		<property name="md5" length="32" />
		<property name="uri" unique="true" />
		<subclass name="ImageData" discriminator-value="img">
			<property name="width" />
			<property name="height" />
			<property name="format" column="imgFormat" />
			<subclass name="CroppedImageData" discriminator-value="crop">
				<many-to-one name="original" cascade="save-update" />
				<property name="x" />
				<property name="y" />
				<property name="scaledWidth" />
			</subclass>
		</subclass>
		<subclass name="SwfData" discriminator-value="swf">
			<property name="width" />
			<property name="height" />
			<property name="version" column="swfVersion" />
		</subclass>
		<subclass name="VideoData" discriminator-value="video">
			<property name="duration" />
			<property name="width" />
			<property name="height" />
			<property name="bps" />
			<property name="videoCodec" />
			<property name="fps" />
			<property name="audioCodec" />
			<property name="samplingRate" />
			<property name="stereo" />
		</subclass>
	</class>

</hibernate-mapping>
