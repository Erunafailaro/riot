<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<import resource="classpath:org/riotfamily/media/runtime/db-schema.xml"/>
    
	<override:add ref="sessionFactory" property="mappingLocations">
		<value>classpath:org/riotfamily/media/dao/hibernate/file.hbm.xml</value>
		<value>classpath:org/riotfamily/media/dao/hibernate/data.hbm.xml</value>
	</override:add>
	
	<bean id="mediaDao" class="org.springframework.aop.framework.ProxyFactoryBean"
			depends-on="fileDataInitializer">
		<property name="interceptorNames"><value>matchAllTxInterceptor</value></property>
		<property name="target"><ref bean="mediaDaoTarget" /></property>
	</bean>

	<bean id="mediaDaoTarget" class="org.riotfamily.media.dao.hibernate.HibernateMediaDao">
		<constructor-arg ref="sessionFactory" />
	</bean>
	
	<bean id="fileStore" class="org.riotfamily.media.store.DefaultFileStore">
		<property name="uriPrefix" value="${riot.media.uriPrefix=/media}" />
	</bean>
	
	<bean id="ffmpeg" class="org.riotfamily.media.service.FFmpeg" />
	
	<bean id="mediaService" class="org.riotfamily.media.service.MediaService">
		<constructor-arg ref="fileStore" />
		<constructor-arg ref="fileTypeMap" />
		<constructor-arg ref="ffmpeg" />
	</bean>
	
	<bean id="fileDataInitializer" class="org.riotfamily.common.beans.MethodInvokingBean">
		<property name="staticMethod" value="org.riotfamily.media.model.data.FileData.setMediaService" />
		<property name="argument" ref="mediaService"/>
	</bean>

</beans>