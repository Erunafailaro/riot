<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<override:add ref="sessionFactory" property="annotatedClasses">
		<value>org.riotfamily.media.model.RiotFile</value>
		<value>org.riotfamily.media.model.RiotImage</value>
		<value>org.riotfamily.media.model.RiotSwf</value>
		<value>org.riotfamily.media.model.RiotVideo</value>
		<value>org.riotfamily.media.model.data.FileData</value>
		<value>org.riotfamily.media.model.data.ImageData</value>
		<value>org.riotfamily.media.model.data.CroppedImageData</value>
		<value>org.riotfamily.media.model.data.SwfData</value>
		<value>org.riotfamily.media.model.data.VideoData</value>
	</override:add>
	
	<bean id="mediaDao" class="org.riotfamily.media.dao.hibernate.HibernateMediaDao">
		<constructor-arg ref="sessionFactory" />
	</bean>
	
	<bean id="fileStore" class="org.riotfamily.media.store.DefaultFileStore">
		<property name="uriPrefix" value="${riot.media.uriPrefix=/media}" />
		<property name="storagePath" value="${riot.media.storagePath=}" />
	</bean>
	
	<bean id="ffmpeg" class="org.riotfamily.media.service.FFmpeg" />
	
	<bean id="mediaService" class="org.riotfamily.media.service.MediaService">
		<constructor-arg ref="fileStore" />
		<constructor-arg ref="fileTypeMap" />
		<constructor-arg ref="ffmpeg" />
	</bean>
	
	<bean id="fileDataInitializer" class="org.riotfamily.common.beans.MethodInvokingBean">
		<property name="staticMethod" value="org.riotfamily.media.model.data.FileData.setMediaService" />
		<property name="argument" ref="mediaService"/>
	</bean>

</beans>
