<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:db="http://www.riotfamily.org/schema/revolt"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.riotfamily.org/schema/revolt
		http://www.riotfamily.org/schema/revolt/revolt.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<db:history module="components" data-source="riotDataSource">
		<db:change-set id="initial">
			<db:create-table name="riot_component_lists">
				<db:column name="id" type="BIGINT" not-null="true" primary-key="true" auto-increment="true" />
				<db:column name="`type`" type="VARCHAR" length="66" />
				<db:column name="`path`" type="VARCHAR" length="200" />
				<db:column name="slot" type="VARCHAR" length="66" />
				<db:column name="parent" type="BIGINT" />
				<db:column name="dirty" type="BIT" />
				<db:column name="lastModifiedBy" type="VARCHAR" length="255" />
				<db:column name="lastModified" type="TIMESTAMP" />
			</db:create-table>
			<db:add-unique-constraint table="riot_component_lists" name="riot_components_list_key" on="`type`,`path`,slot,parent" />

			<db:create-table name="riot_version_containers">
				<db:column name="id" type="BIGINT" not-null="true" primary-key="true" auto-increment="true" />
				<db:column name="live_list" type="BIGINT" />
				<db:column name="live_pos" type="INTEGER" />
				<db:column name="preview_list" type="BIGINT" />
				<db:column name="preview_pos" type="INTEGER" />
				<db:column name="live_version" type="BIGINT" />
				<db:column name="preview_version" type="BIGINT" />
			</db:create-table>

			<db:add-foreign-key table="riot_version_containers" name="riot_components_live_list" references="riot_component_lists">
				<db:ref local="live_list" foreign="id" />
			</db:add-foreign-key>
			<db:add-foreign-key table="riot_version_containers" name="riot_components_preview_list" references="riot_component_lists">
				<db:ref local="preview_list" foreign="id" />
			</db:add-foreign-key>

			<db:add-foreign-key table="riot_component_lists" name="riot_components_lists_parent" references="riot_version_containers">
				<db:ref local="parent" foreign="id" />
			</db:add-foreign-key>

			<db:create-table name="riot_component_versions">
				<db:column name="id" type="BIGINT" not-null="true" primary-key="true" auto-increment="true" />
				<db:column name="`type`" type="VARCHAR" length="255" />
				<db:column name="container" type="BIGINT" />
				<db:column name="dirty" type="BIT" />
			</db:create-table>
			<db:add-foreign-key table="riot_component_versions" name="riot_components_versions_container" references="riot_version_containers">
				<db:ref local="container" foreign="id" />
			</db:add-foreign-key>
			<db:add-foreign-key table="riot_version_containers" name="riot_components_live_version" references="riot_component_versions">
				<db:ref local="live_version" foreign="id" />
			</db:add-foreign-key>
			<db:add-foreign-key table="riot_version_containers" name="riot_components_preview_version" references="riot_component_versions">
				<db:ref local="preview_version" foreign="id" />
			</db:add-foreign-key>

			<db:create-table name="riot_component_properties">
				<db:column name="component_version" type="BIGINT" not-null="true" primary-key="true" />
				<db:column name="`key`" type="VARCHAR" length="255" not-null="true" primary-key="true" />
				<db:column name="elt" type="LONGVARCHAR" />
			</db:create-table>
			
			<db:create-table name="riot_component_file_storage_info">
				<db:column name="`type`" type="VARCHAR" length="255" not-null="true" primary-key="true" />
				<db:column name="property" type="VARCHAR" length="255" not-null="true" primary-key="true" />
				<db:column name="fileStoreId" type="VARCHAR" length="255" />
			</db:create-table>
		</db:change-set>


	</db:history>
</beans>