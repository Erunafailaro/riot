<ivy-module version="1.3">
    <info organisation="riotfamily" module="riot-components" revision="${riot.revision}" />
    <configurations>
    	<conf name="build" />
    	<conf name="runtime" />
    	<conf name="test" />
    </configurations>
    <dependencies>
	    <dependency org="riotfamily" name="riot-common" rev="${dep.riot.revision}" conf="*->@" />
	    <dependency org="riotfamily" name="riot-core" rev="${dep.riot.revision}" conf="*->@" />
	    <dependency org="riotfamily" name="riot-forms" rev="${dep.riot.revision}" conf="*->@" />
        <dependency org="riotfamily" name="riot-hibernate" rev="${dep.riot.revision}" conf="*->@" />
        <dependency org="riotfamily" name="riot-website" rev="${dep.riot.revision}" conf="*->@" />
        <dependency org="riotfamily" name="swfupload-js" rev="7.0-beta3" conf="runtime->default" />
        <dependency org="freemarker" name="freemarker" rev="2.3.10" conf="runtime->default" />
        <dependency org="springframework" name="spring" rev="2.0.7" conf="build->default;runtime->web" />
    </dependencies>
</ivy-module>
