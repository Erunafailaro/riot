<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<bean id="componentListRenderer" class="org.riotfamily.components.render.list.ComponentListRenderer">
		<constructor-arg ref="componentDao" />
		<constructor-arg ref="componentRepository" />
		<constructor-arg ref="transactionManager" />
		<property name="liveModeRenderStrategy">
			<bean class="org.riotfamily.components.render.list.LiveModeRenderStrategy">
				<constructor-arg ref="cacheService" />
				<constructor-arg ref="componentDao" />
				<constructor-arg ref="componentRepository" />
			</bean>
		</property>
		<property name="editModeRenderStrategy">
			<bean class="org.riotfamily.components.render.list.EditModeRenderStrategy">
				<constructor-arg ref="cacheService" />
				<constructor-arg ref="componentDao" />
				<constructor-arg ref="componentRepository" />
			</bean>
		</property>
	</bean>
	
	<override:put ref="freemarkerConfig" property="macroLibraries">
		<entry key="inplace" value="classpath:org/riotfamily/components/view/inplace.ftl" />
	</override:put>
	
	<bean id="inplaceMacroHelper" class="org.riotfamily.components.view.InplaceMacroHelperFactory">
		<constructor-arg ref="componentRepository" />
		<constructor-arg ref="componentListRenderer" />
		<constructor-arg ref="riotDaoService" />
		<property name="toolbarScripts">
			<list>
				<value>riot-js/resources.js</value>
				<value>toolbar-loader.js</value>
			</list>
		</property>
	</bean>
		
	<override:properties ref="cachiusHandlerAdapter">
		<property name="cacheKeyProvider">
			<bean class="org.riotfamily.components.context.ComponentRequestCacheKeyProvider" />
		</property>
	</override:properties>
		
	<override:properties ref="cachiusHandlerAdapter">
		<property name="cacheKeyProvider">
			<bean class="org.riotfamily.components.cache.EditModeAwareCacheKeyProvider" />
		</property>
	</override:properties>

</beans>
