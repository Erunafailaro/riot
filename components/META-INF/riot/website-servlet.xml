<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-6.5.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="defaultComponentListLocator" class="org.riotfamily.components.locator.UrlComponentListLocator">
		<constructor-arg ref="pathCompleter" />
	</bean>

	<bean class="org.riotfamily.components.controller.ComponentListControllerPostProcessor">
		<property name="componentDao" ref="componentDao" />
		<property name="repository" ref="componentRepository" />
		<property name="transactionManager" ref="transactionManager" />
		<property name="locator" ref="defaultComponentListLocator" />
		<property name="cacheService" ref="cacheService" />
	</bean>
	
	<bean class="org.riotfamily.components.controller.ComponentControllerPostProcessor">
		<property name="componentDao" ref="componentDao" />
		<property name="transactionManager" ref="transactionManager" />
	</bean>

	<override:put ref="freemarkerConfig" property="macroLibraries">
		<entry key="inplace" value="classpath:org/riotfamily/components/view/inplace.ftl" />
	</override:put>
	
	<bean id="inplaceMacroHelper" class="org.riotfamily.components.view.InplaceMacroHelperFactory">
		<constructor-arg ref="componentRepository" />
		<constructor-arg ref="riotDaoService" />
		<property name="toolbarScripts">
			<list>
				<value>riot-js/resources.js</value>
				<value>toolbar-loader.js</value>
			</list>
		</property>
	</bean>
	
	<!-- Deprecated. Projects should use the "riotInterceptors" bean instead. -->
	<bean id="storeContextInterceptor" class="org.riotfamily.components.context.StoreContextInterceptor" />

	<override:add ref="riotInterceptors" property="interceptors">
		<ref local="storeContextInterceptor" />
	</override:add>
	
	<override:properties ref="cachiusHandlerAdapter">
		<property name="cacheKeyProvider">
			<bean class="org.riotfamily.components.context.PartialRequestCacheKeyProvider" />
		</property>
	</override:properties>
	
	<override:properties ref="viewResolver">
		<property name="viewClass" value="org.riotfamily.components.view.ComponentFreeMarkerView" />
	</override:properties>
	
</beans>
