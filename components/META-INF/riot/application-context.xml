<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<import resource="classpath:org/riotfamily/components/runtime/db-schema.xml"/>

	<override:add ref="sessionFactory" property="mappingLocations">
		<value>classpath:org/riotfamily/components/dao/hibernate/component.hbm.xml</value>
	</override:add>
	
	<bean id="componentRepository" class="org.riotfamily.components.config.ComponentRepository">
		<property name="configLocations">
			<list>
				<value>classpath:/org/riotfamily/components/runtime/component-messages.xml</value>
				<value>/WEB-INF/website-config/components.xml</value>
			</list>
		</property>
		<property name="viewNamePrefix" value="components/" />
		<property name="viewNameSuffix" value=".ftl" />
	</bean>

	<bean id="contentFactory" class="org.riotfamily.components.model.HibernateContentFactory">
		<constructor-arg ref="sessionFactory" />
	</bean>
	
	<bean id="contentFactorySerivce" class="org.riotfamily.common.beans.MethodInvokingBean">
		<property name="staticMethod" value="org.riotfamily.components.model.ContentFactoryService.setContentFactory" />
		<property name="argument" ref="contentFactory"/>
	</bean>
	
	<bean id="componentDao" class="org.springframework.aop.framework.ProxyFactoryBean"
			depends-on="contentFactorySerivce">
		<property name="interceptorNames"><value>matchAllTxInterceptor</value></property>
		<property name="target"><ref bean="componentDaoTarget" /></property>
	</bean>

	<bean id="componentDaoTarget" class="org.riotfamily.components.dao.hibernate.HibernateComponentDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<bean id="contentEventMulticaster" class="org.springframework.context.event.SimpleApplicationEventMulticaster" />

</beans>