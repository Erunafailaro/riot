<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd">

	<override:add ref="sessionFactory" property="annotatedClasses">
		<value>org.riotfamily.components.model.Component</value>
		<value>org.riotfamily.components.model.ComponentList</value>
		<value>org.riotfamily.components.model.Content</value>
		<value>org.riotfamily.components.model.ContentContainer</value>
		<value>org.riotfamily.components.model.wrapper.ValueWrapper</value>
		<value>org.riotfamily.components.model.wrapper.BooleanWrapper</value>
		<value>org.riotfamily.components.model.wrapper.ComponentListWrapper</value>
		<value>org.riotfamily.components.model.wrapper.DateWrapper</value>
		<value>org.riotfamily.components.model.wrapper.EntityWrapper</value>
		<value>org.riotfamily.components.model.wrapper.ListWrapper</value>
		<value>org.riotfamily.components.model.wrapper.MapWrapper</value>
		<value>org.riotfamily.components.model.wrapper.NumberWrapper</value>
		<value>org.riotfamily.components.model.wrapper.RiotFileWrapper</value>
		<value>org.riotfamily.components.model.wrapper.StringWrapper</value>
	</override:add>
		
	<bean id="valueWrapperFactory" class="org.riotfamily.components.model.wrapper.HibernateWrapperFactory">
		<constructor-arg ref="sessionFactory" />
	</bean>
	
	<bean id="valueWrapperService" class="org.riotfamily.common.beans.MethodInvokingBean">
		<property name="staticMethod" value="org.riotfamily.components.model.wrapper.ValueWrapperService.setWrapperFactory" />
		<property name="argument" ref="valueWrapperFactory" />
	</bean>
	
	<bean id="componentDao" class="org.riotfamily.components.dao.HibernateComponentDao">
		<constructor-arg ref="sessionFactory" />
		<constructor-arg ref="cacheService" />
	</bean>
	
</beans>