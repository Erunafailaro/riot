	<override:add ref="systemScreens">
		<bean id="brokenLinks" class="org.riotfamily.core.screen.list.TreeListScreen">
			<property name="icon" value="link_break" />
			<property name="dao">
				<bean class="org.riotfamily.linkcheck.BrokenLinkRiotDao">
					<constructor-arg ref="sessionFactory" />
				</bean>			
			</property>
			<property name="columns">
				<list>
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="source" />
					</bean>
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="destination" />
					</bean>
					<bean class="org.riotfamily.core.screen.list.ColumnConfig">
						<property name="property" value="statusCode" />
					</bean>
				</list>
			</property>
			<property name="commands">
				<list>
				 	<bean class="org.riotfamily.linkcheck.GotoUrlCommand">
				 		<property name="urlProperty" value="source" />
				 	</bean>
				</list>
			</property>
		</bean>
	</override:add>
 	
