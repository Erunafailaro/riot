<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-config PUBLIC "-//Riot//Form Config DTD 6.2//EN" 
		"http://www.riotfamily.org/dtd/6.2/form-config.dtd">

<form-config>
	
	<form id="page" bean-class="org.riotfamily.pages.page.PersistentPage">
		<group>
			<textfield bind="pathComponent" required="true" regex="[A-Za-z_]*"/>
			<checkbox bind="folder" />
		</group>
		<nested-form bind="metaData" required="true"
				bean-class="org.riotfamily.pages.page.meta.MetaData">

			<textfield bind="title" required="true" />
			<textarea bind="description" rows="3" max-length="255" />
			<textarea bind="keywords" rows="3" max-length="255" />
		</nested-form>
	</form>

	<form id="riotUser" bean-class="org.riotfamily.riot.hibernate.security.User">
		<group>
			<editable-if-new>
				<textfield bind="id" required="true" />
			</editable-if-new>
			<selectbox bind="role" required="true">
				<model ref="roles" />
			</selectbox>
			<textfield bind="name" />
			<textfield bind="email" />
		</group>
		<group>
			<textfield bind="newPassword" />
		</group>
	</form>
	
	<form id="imageComponent" bean-class="java.util.HashMap">
		<image-upload bind="image" store="defaultFileStore" />
		<selectbox bind="class" required="true" 
			label-message-key="imageComponent.class." append-label="true">
			<model class="org.riotfamily.forms.element.support.select.StaticOptionsModel">
				<set-property name="commaDelimitedValues" value="block,right,left" />
			</model>
		</selectbox>
	</form>
	
	<form id="paragraphComponent" bean-class="java.util.HashMap">
		<selectbox bind="clear" required="true" 
			label-message-key="paragraphComponent.clear." append-label="true">
			<model class="org.riotfamily.forms.element.support.select.StaticOptionsModel">
				<set-property name="commaDelimitedValues" value="false,true" />
			</model>
		</selectbox>
	</form>
	
</form-config>