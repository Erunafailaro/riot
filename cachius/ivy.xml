<ivy-module version="1.3">
    <info organisation="riotfamily" module="cachius" revision="${riot.revision}" />
    <configurations>
    	<conf name="build" />
    	<conf name="runtime" />
    	<conf name="test" />
    	<conf name="src" />
    </configurations>
    <publications>
    	<artifact />
    	<artifact type="source" ext="src.zip" conf="src" />
    </publications>
    <dependencies>
		<dependency org="riotfamily" name="riot-common" rev="${dep.riot.revision}" conf="*->@" />
		<dependency org="apache" name="commons-logging" rev="${dep.commons-logging.revision}" conf="*->default" />
		<dependency org="springframework" name="spring" rev="${dep.spring.revision}" conf="build->default;runtime->web;src->src" />
    </dependencies>
</ivy-module>
