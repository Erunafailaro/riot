<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
	<import resource="classpath:/org/riotfamily/riot/hibernate/runtime/db-schema.xml"/>
	
	<!-- JDBC DataSource pooled by C3P0 -->
	<bean id="riotDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${jdbc.driver_class}" />
	    <property name="jdbcUrl" value="${jdbc.url}" />
	    <property name="user" value="${jdbc.username}" />
	    <property name="password" value="${jdbc.password}" />
	    <property name="maxPoolSize" value="${jdbc.maxPoolSize=10}" />
	    <property name="maxStatements" value="0" />
	    <property name="acquireIncrement" value="1" />
	    <property name="idleConnectionTestPeriod" value="60" />
	    <property name="checkoutTimeout" value="30000" />
	</bean>
	
	<bean id="riotHibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="properties" value="${hibernate.*}" />
	</bean>
		
	<bean id="evolver" class="org.riotfamily.revolt.Evolver">
		<property name="automatic" value="${riot.automaticSchemaEvolution=false}" />
		<property name="validate" value="${riot.validateSchema=true}" />
	</bean>
	
	<bean id="riotHibernateMappingLocations" class="org.riotfamily.common.beans.module.ModularListFactoryBean">
		<property name="key" value="hibernateMappingLocations" />
		<property name="sourceList">
			<list>
				<value>classpath:/org/riotfamily/riot/hibernate/security/security.hbm.xml</value>
				<value>classpath:/org/riotfamily/riot/hibernate/workflow/notification/notification.hbm.xml</value>
				<value>classpath:/org/riotfamily/riot/hibernate/job/job.hbm.xml</value>
			</list>
		</property>
	</bean>
		
	<!-- The Hibernate SessionFactory -->
	<bean id="riotSessionFactory" depends-on="evolver" 
			class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
			
		<property name="dataSource" ref="riotDataSource" />
		<property name="mappingLocations" ref="riotHibernateMappingLocations" />
		<property name="hibernateProperties" ref="riotHibernateProperties" />
	</bean>

	<!-- The Transaction Manager -->
	<bean id="transactionManager" name="riotTransactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="riotSessionFactory" />
	</bean>
	
	<bean id="notificationDaoImpl" class="org.riotfamily.riot.hibernate.workflow.notification.HibernateNotificationDao">
		<property name="sessionFactory" ref="riotSessionFactory" />
	</bean>	

</beans>