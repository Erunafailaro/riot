<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-6.5.xsd">

	<import resource="classpath:/org/riotfamily/riot/hibernate/runtime/db-schema.xml"/>

	<!-- JDBC DataSource pooled by C3P0 -->
	<bean id="riotDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${jdbc.driver_class}" />
	    <property name="jdbcUrl" value="${jdbc.url}" />
	    <property name="user" value="${jdbc.username}" />
	    <property name="password" value="${jdbc.password}" />
	    <property name="maxPoolSize" value="${jdbc.maxPoolSize=10}" />
	    <property name="maxStatements" value="0" />
	    <property name="acquireIncrement" value="1" />
	    <property name="idleConnectionTestPeriod" value="60" />
	    <property name="checkoutTimeout" value="30000" />
	</bean>

	<bean id="riotHibernateProperties" class="org.riotfamily.riot.hibernate.support.PropertiesPrefixFactoryBean">
		<property name="prefix" value="hibernate." />
		<property name="properties" value="${hibernate.*}" />
	</bean>

	<bean id="revolt" class="org.riotfamily.revolt.Evolver">
		<property name="automatic" value="${riot.revolt.automatic=false}" />
		<property name="enabled" value="${riot.revolt.enabled=true}" />
	</bean>

	<!-- The Hibernate SessionFactory -->
	<bean id="sessionFactory" depends-on="revolt"
			class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">

		<property name="dataSource" ref="riotDataSource" />
		<property name="mappingLocations">
			<list>
				<value>classpath:/org/riotfamily/riot/hibernate/security/security.hbm.xml</value>
				<value>classpath:/org/riotfamily/riot/hibernate/workflow/notification/notification.hbm.xml</value>
				<value>classpath:/org/riotfamily/riot/hibernate/job/job.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties" ref="riotHibernateProperties" />
	</bean>

	<!-- The Transaction Manager -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<override:bean ref="notificationDao" class="org.riotfamily.riot.hibernate.workflow.notification.HibernateNotificationDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</override:bean>

</beans>