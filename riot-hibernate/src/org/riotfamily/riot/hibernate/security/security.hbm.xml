<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping auto-import="false">
	
	<class name="org.riotfamily.riot.security.session.SessionMetaData" table="riot_session_data" lazy="false">
		<id name="userId" column="principal">
	        <generator class="assigned" />
    	</id>
		<property name="lastLoginDate" />
		<property name="lastLoginIP" />
	</class>
	
	<class name="org.riotfamily.riot.hibernate.security.User" table="riot_users" lazy="false">
		<id name="id">
			<generator class="assigned" />
		</id>
		<property name="password" column="`password`" />
		<property name="role" />
		<property name="name" />
		<property name="email" />
	</class>

</hibernate-mapping>