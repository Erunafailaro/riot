<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	
	<class name="org.riotfamily.riot.job.persistence.JobDetail" table="riot_jobs" lazy="false">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="type" />
		<property name="name" />
		<property name="description" type="text" />
		<property name="state" />
		<property name="objectId" />
		<property name="stepsTotal" />
		<property name="stepsCompleted" />
		<property name="executionTime" />
		<property name="averageStepTime" />
		<property name="startDate" />
		<property name="endDate" />		
	</class>
	
	<class name="org.riotfamily.riot.job.persistence.JobLogEntry" table="riot_job_log" lazy="false">
		<id name="id" access="field">
			<generator class="native" />
		</id>
		<many-to-one name="job" access="field" />
		<property name="date" access="field" />
		<property name="priority" access="field" />
		<property name="message" access="field" />
	</class>
	
</hibernate-mapping>