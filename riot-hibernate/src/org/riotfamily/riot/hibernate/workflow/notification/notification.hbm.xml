<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	
	<class name="org.riotfamily.riot.workflow.notification.support.DefaultNotification" table="riot_notification">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="message" type="text" />
		<property name="category"/>
		<property name="issueDate" />
	</class>
	
	<class name="org.riotfamily.riot.hibernate.workflow.notification.UserNotification" table="riot_user_notification">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="user" column="`user`"/>
		<many-to-one name="notification" />
		<property name="read" />
	</class>
	
</hibernate-mapping>