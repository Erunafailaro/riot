<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-7.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="classpath:org/riotfamily/pages/runtime/db-schema.xml"/>
	
	<override:add ref="sessionFactory" property="annotatedClasses" append="true">
		<value>org.riotfamily.pages.model.Page</value>
		<value>org.riotfamily.pages.model.PageAlias</value>
		<value>org.riotfamily.pages.model.PageNode</value>
		<value>org.riotfamily.pages.model.PageProperties</value>
		<value>org.riotfamily.pages.model.Site</value>
		<value>org.riotfamily.pages.model.wrapper.PageWrapper</value>
	</override:add>

	<bean id="handlerNameHierarchy" class="org.riotfamily.pages.setup.HandlerNameHierarchy" />
	
	<bean id="pageDao" class="org.riotfamily.pages.dao.hibernate.HibernatePageDao">
		<property name="cacheService" ref="cacheService" />
		<property name="componentDao" ref="componentDao" />
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="handlerNameHierarchy" ref="handlerNameHierarchy" />
	</bean>

</beans>