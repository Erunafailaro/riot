<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.5.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-8.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
		
	<bean id="sitemapSchema" class="org.riotfamily.common.beans.config.SingletonLookupFactoryBean">
		<constructor-arg value="org.riotfamily.pages.config.SitemapSchema" />
	</bean>
	
	<bean id="pageResolver" class="org.riotfamily.pages.mapping.PageResolver">
		<constructor-arg ref="sitemapSchema" />
	</bean>
	
	<bean class="org.riotfamily.pages.config.SystemPageSync">
		<constructor-arg ref="sessionFactory" />
		<constructor-arg ref="sitemapSchema" />
	</bean>
	
	<bean class="org.riotfamily.pages.config.SystemPageSyncListener">
		<constructor-arg ref="sitemapSchema" />
	</bean>
	
	<!-- Entity prototypes; see: org.riotfamily.common.beans.config.ConfigurableBean -->
	
	<bean class="org.riotfamily.pages.model.Site" scope="prototype">
		<property name="cacheService" ref="cacheService" />
	</bean>

	<bean class="org.riotfamily.pages.model.Page" scope="prototype">
		<property name="cacheService" ref="cacheService" />
		<property name="schema" ref="sitemapSchema" />
	</bean>
	
</beans>
