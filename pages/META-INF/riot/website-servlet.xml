<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-6.5.xsd">


	<bean id="pageHandlerMapping" class="org.riotfamily.pages.mapping.PageHandlerMapping">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
		<property name="interceptors">
			<list>
				<ref bean="noCacheInterceptor" />
			</list>
		</property>
	</bean>
	
	<bean id="folderFilterPlugin" class="org.riotfamily.pages.mapping.FolderFilterPlugin">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
		<constructor-arg ref="transactionManager" />
		<property name="filterName" value="website-filter" />
	</bean>
	
	<override:bean ref="defaultComponentListLocator" class="org.riotfamily.pages.component.PageComponentListLocator">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
	</override:bean>

	<bean class="org.riotfamily.common.beans.module.FactoryBeanModule">
		<property name="properties">
			<map>
				<entry key="freemarkerMacroLibraries">
					<props>
						<prop key="page">classpath:org/riotfamily/pages/macro/page.ftl</prop>
					</props>
				</entry>
				<entry key="riotToolbarResources">
					<value>tiny_mce/page-chooser.js</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="pageMacroHelper" class="org.riotfamily.pages.macro.PageMacroHelperFactory">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
	</bean>

</beans>
