<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
				
	<!-- 
	<bean id="folderFilterPlugin" class="org.riotfamily.pages.support.FolderFilterPlugin">
		<property name="filterName" value="website-servlet-filter" />
		<property name="ignoreFilterNotPresent" value="true" />
	</bean>
	-->

	<bean id="defaultComponentListLocatorImpl" class="org.riotfamily.pages.component.PageComponentListLocator">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageLocationResolver" />
	</bean>
	
	<bean class="org.riotfamily.common.beans.module.FactoryBeanModule">
		<property name="properties">
			<map>
				<entry key="freemarkerMacroLibraries">
					<props>
						<prop key="page">classpath:org/riotfamily/pages/freemarker/page.ftl</prop>
					</props>
				</entry>
				<entry key="freemarkerVariables">
					<map>
						<entry key="handlerUrl">
							<bean class="org.riotfamily.pages.freemarker.HandlerUrlMethod">
								<constructor-arg ref="pageDao" />
								<constructor-arg ref="pageLocationResolver" />
							</bean>
						</entry>
					</map>
	 			</entry>
			</map>
		</property>
	</bean>
	
</beans>
