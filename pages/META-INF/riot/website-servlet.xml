<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:override="http://www.riotfamily.org/schema/common/override"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-2.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.riotfamily.org/schema/common/override
		http://www.riotfamily.org/schema/common/override-6.5.xsd">


	<bean id="pageHandlerMapping" class="org.riotfamily.pages.mapping.PageHandlerMapping">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageUrlBuilder" />
		<property name="interceptors">
			<list>
				<ref bean="riotInterceptors" />
			</list>
		</property>
	</bean>
	
	<bean id="folderFilterPlugin" class="org.riotfamily.pages.mapping.FolderFilterPlugin">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageUrlBuilder" />
		<constructor-arg ref="transactionManager" />
		<property name="filterName" value="website-filter" />
	</bean>
	
	<override:bean ref="defaultComponentListLocator" class="org.riotfamily.pages.component.PageComponentListLocator">
		<constructor-arg ref="pageDao" />
		<constructor-arg ref="pageUrlBuilder" />
	</override:bean>

	<override:put ref="freemarkerConfig" property="macroLibraries">
		<entry key="pages" value="classpath:org/riotfamily/pages/view/pages.ftl" />
	</override:put>
	
	<override:put ref="freemarkerConfig" property="freemarkerVariables">
		<entry key="pageDao" value-ref="pageDao" />
	</override:put>
	
	<bean id="pageObjectWrapperPlugin" class="org.riotfamily.pages.view.PageObjectWrapperPlugin">
		<constructor-arg ref="pageUrlBuilder" />
		<constructor-arg ref="componentRepository" />
	</bean>
	
	<override:add ref="inplaceMacroHelper" property="toolbarScripts" append="true">
		<value>tiny_mce/page-chooser.js</value>
	</override:add>

	<bean id="currentPage" class="org.riotfamily.pages.view.CurrentPageMacroHelperFactory">
		<constructor-arg ref="pageDao" />
	</bean>

</beans>
