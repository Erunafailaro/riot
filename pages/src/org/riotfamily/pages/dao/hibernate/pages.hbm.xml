<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.riotfamily.pages" auto-import="false">

	<class name="PageNode" table="riot_page_nodes">
		<cache usage="nonstrict-read-write" region="pages" />
		<id name="id">
			<generator class="native" />
		</id>

		<!-- We have to cascade updates so that the parent is reattached -->
		<many-to-one name="parent" insert="false" update="false" cascade="save-update" />

		<many-to-one name="site" />

		<!-- We must not use all-delete-orphan here, because otherwise nodes can not be moved to another parent -->
		<list name="childNodes" cascade="all">
			<key column="parent" />
			<list-index column="pos" />
			<one-to-many class="PageNode" />
		</list>
		<set name="pages" order-by="creationDate" cascade="all-delete-orphan">
			<key column="node" />
			<one-to-many class="Page" />
		</set>
		<property name="handlerName" />
		<property name="childHandlerName" />
		<property name="hidden" />
		<property name="systemNode" />
	</class>

	<class name="Page" table="riot_pages">
		<cache usage="nonstrict-read-write" region="pages" />
		<id name="id" access="field">
			<generator class="native" />
		</id>
		<!-- We have to cascade updates so that the parent is reattached -->
		<many-to-one name="node" insert="false" update="false" cascade="save-update" />
		<property name="locale" length="5"/>
		<property name="published" />
		<property name="creationDate" />
		<property name="pathComponent" />
		<property name="folder" />
		<property name="path" column="`path`" />
		<many-to-one name="versionContainer" cascade="all" />
	</class>

	<class name="PageAlias" table="riot_page_aliases">
		<cache usage="nonstrict-read-write" region="pages" />
		<composite-id name="location">
			<key-property name="siteName" />
			<key-property name="path" column="`path`" />
			<key-property name="locale" />
		</composite-id>
		<many-to-one name="page" />
	</class>

	<class name="Site" table="riot_sites">
		<cache usage="nonstrict-read-write" region="pages" />
		<id name="id" access="field">
			<generator class="native" />
		</id>
		<property name="name" unique="true" />
		<property name="enabled" />
		<list name="locales" table="riot_site_locales">
			<cache usage="nonstrict-read-write" region="pages" />
			<key column="site" />
			<index column="pos" />
			<element type="locale" length="5" />
		</list>
	</class>

</hibernate-mapping>