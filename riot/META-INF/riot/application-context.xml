<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<bean id="configurer" class="org.riotfamily.common.beans.config.PlaceholderWithDefaultConfigurer">
		<property name="location" value="classpath:/application.properties" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="contextOverride" value="true" />
	</bean>

	<bean id="riotRuntime" class="org.riotfamily.riot.runtime.RiotRuntime">
		<property name="resourceMapping" value="/resources" />
	</bean>

	<bean id="riotServletPrefix" factory-bean="riotRuntime" factory-method="getServletPrefix" />

	<bean id="riotResourcePath" factory-bean="riotRuntime" factory-method="getResourcePath" />
	
	<bean id="riotVersion" factory-bean="riotRuntime" factory-method="getVersionString" />

	<bean id="notificationDao" class="org.riotfamily.riot.workflow.notification.support.DefaultNotificationDao" />

	<bean id="notificationFactory" class="org.riotfamily.riot.workflow.notification.support.DefaultNotificationFactory" />

	<tx:advice id="matchAllTxInterceptor">
		<tx:attributes>
			<tx:method name="*" propagation="REQUIRED" isolation="DEFAULT" />
		</tx:attributes>
	</tx:advice>

	<bean id="riotDaoService" class="org.riotfamily.riot.list.RiotDaoService" />
	
	<bean id="riotDaoPointcut" class="org.springframework.aop.support.NameMatchMethodPointcut">
		<property name="classFilter">
			<bean class="org.springframework.aop.support.RootClassFilter">
				<constructor-arg value="org.riotfamily.riot.dao.RiotDao" />
			</bean>
		</property>
		<property name="mappedNames">
			<list>
				<value>save</value>
				<value>update</value>
				<value>delete</value>
				<value>addChild</value>
				<value>swapEntity</value>
			</list>
		</property>
	</bean>

	<bean id="riotAccessControlInterceptor" class="org.riotfamily.riot.security.session.AccessControlInterceptor" />

</beans>