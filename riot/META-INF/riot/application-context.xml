<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
	<bean id="riotRuntime" class="org.riotfamily.riot.runtime.RiotRuntime">
		<property name="resourceMapping" value="/resources" />
	</bean>
	
	<bean id="riotServletPrefix" factory-bean="riotRuntime" factory-method="getServletPrefix" />
	
	<bean id="riotResourcePath" factory-bean="riotRuntime" factory-method="getResourcePath" />
	
	<bean id="notificationDao" class="org.riotfamily.common.beans.module.FallbackFactoryBean">
		<property name="fallback">
			<bean class="org.riotfamily.riot.workflow.notification.support.DefaultNotificationDao" />
		</property>
	</bean>

	<bean id="notificationFactory" class="org.riotfamily.common.beans.module.FallbackFactoryBean">
		<property name="fallback">
			<bean class="org.riotfamily.riot.workflow.notification.support.DefaultNotificationFactory" />
		</property>
	</bean>
	
	<bean id="riotDaoPointcut" class="org.springframework.aop.support.NameMatchMethodPointcut">
		<property name="mappedNames">
			<list>
				<value>save</value>
				<value>update</value>
				<value>delete</value>
				<value>addChild</value>
				<value>swapEntity</value>
			</list>
		</property>
	</bean>	

	<bean id="riotAccessControlInterceptor" class="org.riotfamily.riot.security.AccessControlInterceptor" />

</beans>