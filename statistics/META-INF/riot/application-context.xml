<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:override="http://www.riotfamily.org/schema/common/override"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop" 
    xmlns:tx="http://www.springframework.org/schema/tx" 
    xsi:schemaLocation="
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-2.0.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-2.0.xsd 
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
        http://www.riotfamily.org/schema/common/override
        http://www.riotfamily.org/schema/common/override-7.0.xsd">

    <!-- ================================================================== -->
    <!-- DAOs handling backend statistics                                   -->
    <!-- ================================================================== -->
   
    <bean id="hibernateStatisticsDao" abstract="true">
         <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean id="systemPropertiesDao" class="org.riotfamily.statistics.dao.SystemPropertiesDao" />

    <bean id="applicationPropertiesDao" class="org.riotfamily.statistics.dao.ApplicationPropertiesDao" >
        <property name="resource">
            <bean class="org.springframework.core.io.ClassPathResource">
                <constructor-arg value="/application.properties"/>
            </bean>
        </property>
    </bean>
    
    <bean id="environmentPropertiesDao" class="org.riotfamily.statistics.dao.EnvironmentPropertiesDao" />
 
    <bean id="hibernateCommonStatisticsDao" parent="hibernateStatisticsDao" class="org.riotfamily.statistics.dao.HibernateCommonStatisticsDao" />
    
    <bean id="hibernateCacheStatisticsDao" parent="hibernateStatisticsDao" class="org.riotfamily.statistics.dao.HibernateCacheStatisticsDao" />
 
    <bean id="hibernateCacheRegionDao"  parent="hibernateStatisticsDao" class="org.riotfamily.statistics.dao.HibernateCacheRegionDao" />
 
    <bean id="memoryStatisticsDao" class="org.riotfamily.statistics.dao.MemoryStatisticsDao" />

    <bean id="swarmStatisticsDao" class="org.riotfamily.statistics.dao.SwarmStatisticsDao" >
        <!--  <property name="riotChannel" ref="riotChannel" /> -->
    </bean>

    <bean id="c3p0StatisticsDao" class="org.riotfamily.statistics.dao.C3P0StatisticsDao" >
        <property name="dataSource" ref="riotDataSource" />
    </bean>

    <bean id="packageListDao" class="org.riotfamily.statistics.dao.PackageListDao" >
		<property name="patterns">
			<list>
				<value>org.riotfamily.*</value>
				<value>org.springframework.*</value>
				<value>org.hibernate.*</value>
				<value>java.*</value>
			</list>
		</property>
    </bean>
    
    
</beans>

